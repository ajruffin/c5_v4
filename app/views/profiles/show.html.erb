<p align="center">
<%= image_tag(@business.image_url(:thumb).to_s) %>
</p>
<div style="text-align:center">
  <div class="page-header">
  <h1><%= @business.name %> </h1>
</div>

<div><%= @business.address %></div>
<div><%= @business.city %> <%= @business.state %> <%= @business.zip %></div>
<div><%= @business.phone %></div>
</div>

<% if current_business %>
<div id="createStatus" class="panel right">
    <h1>Create a Status</h1>
    <p>
    <%= form_for @status do |f| %>
        <%= f.text_area :content, class: 'statusText' %>
        <%= f.submit "Status!" %>
    <% end %>
    </p>
</div>
<% end %>
<div class="panel left">
    <h1>Your Statuses</h1>
    <% @business.statuses.each do |status| %>
      <div class="well">
       <%= @business.name %>
        <br />
      <%= status.content %>
      <br />
      <%= time_ago_in_words(status.created_at) %> ago
    </div>
    <% end %>
</div>